<div class="row">

  <div class="row">
    <div class="leaderboard_card card_style small-8 medium-8 large-8 columns">
      <div class="card_title small-12 medium-12 large-12 columns">
        <h3>
          League Leaders
        </h3>
      </div>
    
      <div class="small-3 medium-3 large-3 columns grab-pic title-pic">
        <div class="title-text">King of the Hill</div>
        <img src=<%= Player.power_ranking.first.picture_url %>>
        <div class="title-holder"><%= Player.power_ranking.first.name %></div class="title-holder">
      </div>
      <div class="small-3 medium-3 large-3 columns grab-pic title-pic">
        <div class="title-text">Biggest Loser</div>
        <img src=<%= Player.power_ranking.last.picture_url %>> 
        <div class="title-holder"><%= Player.power_ranking.last.name %></div class="title-holder">
      </div>
      <div class="small-3 medium-3 large-3 columns grab-pic title-pic">
        <div class="title-text">Longest Win Streak</div>
        <img src=<%= Player.power_ranking.first.picture_url %>>
        <div class="title-holder"><%= Player.win_streak_sorting.first.name %></div class="title-holder">
      </div>
      <div class="small-3 medium-3 large-3 columns grab-pic title-pic">
        <div class="title-text">Worst Loss</div> 
        <img src=<%= Player.power_ranking.first.picture_url %>>
        <div class="title-holder"><%= worst_loss_display %></div>
      </div>
    </div>
    <div class="power_ranking_card card_style small-4 medium-4 large-4 columns">
      <div class="card_title small-12 medium-12 large-12 columns">
        <h3>
          Power Ranking
        </h3>
      </div>
    </div>
      <div class="row">
        <% Player.power_ranking.first(2).each do |player| %>
          <h4>
            <%= ordinalize Player.power_ranking.find_index(player) + 1 %>  <%= player.name %> - <%= player.win_percentage %>
          </h4>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="medium-6 large-6 columns">
    <div class="card_style">
      <%= @games.last.player.name %> - <%= @games.last.player_score %>
    </div>
  </div>
  <div class="medium-6 large-6 columns">
    <div class="card_style">
      <%= @games.last.player.name %> - <%= @games.last.player_score %> 
    </div>
  </div>
</div>



