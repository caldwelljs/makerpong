<div class="ranking-wrapping">
  <%= render "layouts/header" %> 
    <div class="row">


      <div class="small-12 medium-12 large-12 columns">
        <div>
          <h3 class= "profile-name">
            Game History
          </h3> 
          <div class="the-border"></div>       
        </div>
        <% @games.each do |game| %>
        <div class="small-10 medium-6 large-6 columns left card_column">
          <div class="recent_game dash_card_style">
            <div class="date_row">
              <%= game.created_at.strftime("%a, %b %d, %Y") %>
            </div>
            <div class="row player_row">
              <div class="game_card_pic small-2 medium-2 large-2 columns card_pic">
                <%= link_to image_tag(game.player.picture_url), game.player %>
              </div>
              <div class="game_index_name small-8 medium-8 large-8 columns <%= "winner_style" if game.winner == game.player.id %>">
                <%= link_to game.player.name, game.player %>
              </div>
              <div class="game_index_score small-2 medium-2 large-2 columns <%= "winner_style" if game.winner == game.player.id %>">
                <%= game.player_score %>
              </div>
            </div>
            <div class="row opponent_row">
              <div class="game_card_pic small-2 medium-2 large-2 columns card_pic">
                <%= link_to image_tag(game.opponent.picture_url),game.opponent %>
              </div>
              <div class="game_index_name small-8 medium-8 large-8 columns <%= "winner_style" if game.winner == game.opponent.id %>">
                <%= link_to game.opponent.name, game.opponent %>
              </div>
              <div class="game_index_score small-2 medium-2 large-2 columns <%= "winner_style" if game.winner == game.opponent.id %>">
                <%= game.opponent_score %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

</div>


<%= link_to 'New Game', new_game_path %>

<%= render "layouts/footer" %>
