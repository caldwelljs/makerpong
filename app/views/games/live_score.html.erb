<div class="scorer-background">
  <div class="row small-offset-1">
    <%= render "layouts/header" %>
  </div>
    <div class="container">
      <div class="row">
        <div class="small-5 medium-5 large-5 small-offset-1 columns">
          <div class="playerCard">
            <div class="changeScore leftScoreChange" id="increasePlayer1">
              <div>+</div>
            </div>
            <div class="scoreCard player1block" id="player_1_score">
              <span>0</span>
            </div>
            <div class="changeScore leftScoreChange" id="decreasePlayer1">
              <div>-</div>
            </div>
          </div>
        </div>
        <div class="small-5 medium-5 large-5 columns">
          <div class="playerCard">
            <div class="changeScore player2ScoreChange" id="increasePlayer2">
              <div>+</div>
            </div>
            <div class="scoreCard player2block" id="player_2_score">
              <span>0</span>
            </div>
            <div class="changeScore player2ScoreChange" id="decreasePlayer2">
              <div>-</div>
            </div>
          </div>
        </div>
        <div class="small-1 medium-1 large-1 columns">
          <a href="#" class="navText newGame" data-reveal-id="myModal">New Game</a>
          <a href="#" class="navText" id="restartGame">Restart</a>
        </div>
      </div>
      <div class="row">
        <div class="small-5 medium-5 large-5 small-offset-1 columns">
          <p class="player" id="player1">
            Player 1
          </p>
        </div>
        <div class="small-5 medium-5 large-5 columns">
          <p class="player" id="player2">
            Player 2
          </p>
        </div>
        <div class="small-1 medium-1 large-1 columns">
        </div>
      </div>

      <div class="row">
        <div class="small-12 medium-12 large-12 columns">
          <h3 class="game-title">
            Ping Pong Matchup
          </h3>
        </div>
      </div>
  </div>
</div>

<div id="myModal" class="reveal-modal" data-reveal>
  <h2>Choose Your Players</h2>
      <div class="player_selection">
        <div class="row">
          <div class="game_form_fields">Player 1 Name</div>         
          <%= collection_select(:player, :name, Player.all, :id, :name, {:prompt => true, :multiple=>true }) %>
          <div class="game_form_fields">Player 1 Name</div>
          <%= collection_select(:player, :name, Player.all, :id, :name, {:prompt => true, :multiple=>true }) %>
        </div>
        <div class="row">
          <div class="right" style="margin-top: 20px;">
            <button type="submit" class="button radius">Start the</button>
          </div>
        </div>
      </div>
  <a class="close-reveal-modal">&#215;</a>
</div>