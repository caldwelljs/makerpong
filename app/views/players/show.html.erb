<div class="ranking-wrapping">
  <% if player_signed_in? %>
  <div class="row">
    <div class="small-2 nav-rowing columns">
      <h1 class="title">
        <%= link_to 'MakerPong', welcome_dashboard_path %>
      </h1>
    </div>
    <div class= "small-8 columns">
      <h1 class="top-right-links weird-link">
        <%= link_to 'Power Rankings', players_path %>
      </h1>
      <h1 class="top-right-links">
        <%= link_to 'New Game', new_game_path %>
      </h1>
      <h1 class="top-right-links">
        <%= link_to 'Profile', player_url(current_player) %>
      </h1>
      <h1 class="top-right-links">
        <%= link_to 'Edit Settings', edit_player_registration_path %>
      </h1>
      <h1 class="top-right-links">
        <%= link_to 'Sign out', destroy_player_session_path, method: :delete %>
      </h1>
    </div>
  </div>
  <% else %>  
  <div class="row">
    <div class="small-2 columns">
      <h1 class="title">
        <%= link_to 'MakerPong', root_url %>
      </h1>
    </div>
    <div class="small-3 small-offset-6 columns">
      <h1 class="top-right-links">
        <%= link_to "Sign in", new_player_session_path %>
      </h1>
    </div>
  </div>
  <% end %>


<!-- ************* end of nav bar****************** -->

  <div class="row">
    <div class="small-5  prof-name-wrap columns">
      <h1 class="profile-name"><%= @player.name %></h1>


      <div class="the-border"></div>


      <h2 class="profile-record"><span><%= @player.wins %><span>-<span><%= @player.losses %></span>, <span><%=  ordinalize @rank %></span> in Maker Division</h2>
    </div>

  </div>
  <div class="row">
    <div class="small-12  prof-name-wrap columns">
      <table>
        <tr class="profile-1st-table-row">
          <td class="profile-1st-table-data">
            <h3 class="pic-title">Picture</h3>
          </td>
          <td class="profile-1st-table-data">
            <h3 class="pic-title">Rank</h3>
          </td>
           <td class="profile-1st-table-data">
            <h3 class="pic-title">PCT</h3>
          </td>
          <td class="profile-last-game-table-data">
            <h3 class="profile-final">Last Game</h3>
            <h3 class="date-after-game-profile-page"><%= @games.last.created_at.strftime(" %a, %b %Y \n %I:%M%p") %></h3>
            <h3 class="profile-t">Final</h3>
          </td>
   
        </tr>
        <tr class="profile-2nd-table-row">
          <td class="profile-2nd-table-data">
            <img class='profile-picture' src=<%= @player.picture_url %>>
          </td>
          <td class="table-data">
            <h1 class="table-rank"><%=  ordinalize @rank %></h1>
          </td>
          <td class="table-data">
            <h1 class="table-percent"><%= @player.win_percentage %></h1>
          </td>
          <td class="last-game-data">
            <h3 class="last-game-title"><%= @player.games.last.player_score %>-<%= @player.games.last.opponent_score %></h3>
            <img class="last-game-player-pic" src=<%= @player.games.get_all_recent_games_for(@player).last.player.picture_url %>>
            <h3 class="last-game-vs">VS</h3>
            <img class="last-game-opponent-pic" src=<%= @player.games.get_all_recent_games_for(@player).last.opponent.picture_url %>>
            <h3 class="last-game-player-name"><%= @player.last_name %></h3>
            <h3 class="last-game-opponent-name"><%= @player.games.last.opponent.last_name %></h3>
            <div class="last-game-border"></div>
            <h3 class="last-game-comment"><%= @player.games.last.opponent.last_name %> hangs on in a thriller to end 4 game skid, <%= @player.games.last.player.last_name %> stunned</h3>
          </td>

        </tr>
      
          
      </table>
      </div>
      <!-- <div class="row"> -->
        <div class="small-7 columns nav-rowing left">
          <table class="nav-rowing">
            <tr class="nav-rowing">
              <td class="previous-1st-table-data nav-rowing">
                <h2 class="profile-previous-games"><%= @player.first_name%>'s previous games</h2>
              </td>
            </tr>
            <tr>
              <td class="previous-2nd-table-data">
                <h3 class="second-table-data-date">Date</h3>
                <h3 class="second-table-data-opponent">Opponent</h3>
                <h3 class="second-table-data-result">Result</h3>
                <h3 class="second-table-data-record">Record</h3>
              </td>
            </tr>
            <tr>
              <td>
                
              </td>
            </tr>
            <% @games.last(9).reverse.each do |game| %>
              <tr>
              <td class="many-data">
                <span class="many-dates"><%= game.created_at.strftime(" %a, %b %Y") %></span>
                <span class="many-vs">VS</span>
                <img class="many-pics" src=<%= game.opponent.picture_url %>>
                <span class="many-opponents"> <%= game.opponent.name %></span>
                <span class="many-w-l">W</span>
                <span class="many-scores"><%= game.player_score %>-<%= game.opponent_score %></span>
                <span class="many-records"><%= game.player.wins %>-<%= game.player.losses %></span>

              </td>
            </tr>

      <% end %>

          </table>
        </div>
        
      <!-- </div> -->
  </div>






   

















