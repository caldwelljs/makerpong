<div class="sign-in-bg">
  <%= render "layouts/header" %>
  <div class="row">
    <div class="small-6 medium-5 large-4 small-centered columns frame signup-box">
      <div class="welcome-title">Sign in</div class="">
      
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="sign-in-label">
          <%= f.email_field :email, :placeholder => "Email", :autofocus => true %>
        </div>
      
        <div class="sign-in-label">
          <%= f.password_field :password, :placeholder => "Password" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="remember-me">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </div>
        <% end -%>
      
        <div ><%= f.submit "Sign in", class: "button sign-up-button" %></div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>   

</div>

  <%= render "layouts/footer" %> 